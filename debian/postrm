#DEBHELPER#

sysUser="ffpu"

if [ -d "/usr/share/ffplayout" ]; then
    yes | rm -rf "/usr/share/ffplayout" "/var/lib/ffplayout"
fi

if [ -d "/var/log/ffplayout" ]; then
    yes | rm -rf "/var/log/ffplayout"
fi

if [ $(id -u $sysUser 2>/dev/null || echo -1) -ge 0 ]; then
    userdel -rf $sysUser
fi
